{
	"compilerOptions": {
		"strict": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"plugins": [
			{
				"transform": "typescript-is/lib/transform-inline/transformer",
				"disallowSuperfluousObjectProperties": true,
				"ignoreClasses": true,
				"ignoreMethods": true
			}
		]
	},
	"include": ["src"]
}
